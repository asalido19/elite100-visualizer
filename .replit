run = "python3 app.py"
modules = ["web", "python-3.12"]

[packager]
language = "python3"
ignoredPaths = [".git"]

[env]
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8050
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dash-app"

[[workflows.workflow]]
name = "dash-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
